<% if favorited?(recipe) %>
  <%= link_to 'Unfavorite', "/users/#{current_user.id}/favorites/#{find_favorite(recipe).id}", method: :delete, class: "unfav-button #{dom_id(recipe)}" %>
<% else %>
  <%= link_to "/users/#{current_user.id}/favorites", method: :post, class: "fav-button #{dom_id(recipe)}" do %>
  	<i class="fa fa-gratipay"> Favorite!</i>
  <% end %>
<% end %>

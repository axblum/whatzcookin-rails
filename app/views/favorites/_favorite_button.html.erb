<% if favorited?(recipe) %>
  <%= link_to 'Unfavorite', "/users/#{current_user.id}/favorites/#{find_favorite(recipe).id}", method: :delete, class: "unfav-button #{dom_id(recipe)}" %>
<% else %>
  <%= link_to "Favorite!", "/users/#{current_user.id}/favorites", method: :post, class: "fav-button #{dom_id(recipe)}" -%>
<% end %>

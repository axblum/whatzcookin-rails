<div class='row'>
  <h1 class='title-text'>WhatzCookin</h1>
	<div>
		<%= flash[:error] %>
	</div>
</div>
<div class='container-fluid'>
	<%= form_tag('/retrieve_recipes', "data-ajax" => "false")  do %>
		<div class='row debugger'>
			<%= text_field_tag('ingredient', "", size: 40, autofocus: true, autocomplete: :off, class: 'search-box') %>
		</div>
		<div class='row'>
			<%= submit_tag 'Find A Recipe', class: 'find-a-recipe col-sm-5 col-md-offset-1 btn btn-default' %>
	<% end %>
		<%= button_to "I'm Feeling Hungry", random_recipe_path, method: :get, class: 'im-feeling-hungry col-sm-5 btn btn-default', "data-ajax" => "false" %>
		</div>
</div>
<div class='row'>
  <div>
    <%= image_tag("http://webknox.com/recipeImages/#{@recipe_info['id']}-556x370.jpg", class: "img-responsive col-md-5") %>
  </div>
  <div class='col-md-6'>
    <h2><%= @recipe_info['title'] %></h2>
  </div>
</div>
<div class='row'>
  <div class='col-md-4'>
    <h1>Ingredients</h1>
    <% @recipe_info['extendedIngredients'].each do |ingredient| %>
      <div><%= ingredient['name'] %> <%= ingredient['amount'] %> <%= ingredient['unit'] %></div>
    <% end %>
  </div>
  <div class='col-md-11'>
    <h2>Instructions</h2>

    <%= link_to("Click Here for instructions", @recipe_info['sourceUrl']) %>

  </div>
</div>

<div class="comments">
  <h3>Comments:</h3>
  <% if @comments  %>
  <ul>
    <% @comments.each do |comment| %>
      <li id="<%= dom_id(comment) %>">
        <p><%= comment.text %><p>
        <p>by <%= comment.user.name %></p>
        <p>at <%= comment.created_at %></p>
        <% if current_user.id == comment.user.id %>
          <%= button_to 'Edit Comment', recipe_comment_path(@recipe.id, comment.id), method: :put %>
        <% end %>
      </li>
    <% end %>
  </ul>
  <% else %>
    <p>There don't seem to be any comments! Login and leave yours!</p>
  <% end %>
</div>


<div>
  <% if current_user %>
    <%= render 'comment_form' %>
  <% end %>
</div>
